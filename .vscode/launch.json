{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Server-Side",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    },
    {
      "name": "Debug: Client-Side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Debug: Full Stack",
      "configurations": [
        "Debug: Server-Side",
        "Debug: Client-Side (Chrome)"
      ]
    }
  ]
}